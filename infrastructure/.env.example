# Environment Configuration for Production Deployment
# Copy this file to .env and fill in your values
# IMPORTANT: Do not commit .env to version control!

# Container Registry Configuration
CONTAINER_REGISTRY=docker.io                    # Options: docker.io, ghcr.io, yourregistry.azurecr.io
REGISTRY_USERNAME=yourusername                  # Your registry username or organization
IMAGE_TAG=latest                                # Image tag to use (e.g., v1.0.0, latest)

# Application Configuration
ENVIRONMENT=Production                          # Environment: Development, Staging, Production
API_PORT=5000                                  # External API port
WEB_PORT=3000                                  # External Web UI port
API_BASE_URL=http://localhost:5000             # Full API URL (update with your server's IP/domain)

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=                                # REQUIRED: Set a strong password

# RabbitMQ Configuration
RABBITMQ_USER=testservice
RABBITMQ_PASSWORD=                             # REQUIRED: Set a strong password

# JWT Configuration
JWT_SECRET_KEY=                                # REQUIRED: At least 32 characters, use: openssl rand -base64 32
JWT_EXPIRATION_MINUTES=60

# Example configurations for different registries:
#
# Docker Hub:
#   CONTAINER_REGISTRY=docker.io
#   REGISTRY_USERNAME=myusername
#
# GitHub Container Registry:
#   CONTAINER_REGISTRY=ghcr.io
#   REGISTRY_USERNAME=myorganization
#
# Azure Container Registry:
#   CONTAINER_REGISTRY=myregistry.azurecr.io
#   REGISTRY_USERNAME=myregistry
#
# AWS ECR:
#   CONTAINER_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com
#   REGISTRY_USERNAME=AWS
